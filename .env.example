# Environment variables for Voice Scam Shield
# Copy this file to .env and fill in the values as needed.

# Google Gemini API key (required for AI semantic analysis)
GOOGLE_API_KEY=

# Whisper model size: tiny, base, small, medium, large-v2 (CPU-friendly: tiny/base)
WHISPER_MODEL=base

# Gemini model
GEMINI_MODEL=models/gemini-2.0-flash-lite

# Scam sensitivity threshold (0.0 - 1.0). Higher = more sensitive to scams.
SCAM_SENSITIVITY=0.6

# Audio settings
SAMPLE_RATE=16000
CHANNELS=1
CHUNK_SECONDS=5.0
